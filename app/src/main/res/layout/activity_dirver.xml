<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context=".ui.accidentwork.DriverActivity">
    <include layout="@layout/tool_bar"/>
    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_15"
        android:padding="@dimen/dp_15"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_0.7"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_15"
                    android:text="是否使用保险"
                    android:textColor="@color/text_333"
                    android:textSize="@dimen/sp_14" />
                <Switch
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:thumb="@drawable/thumb"
                    android:track="@drawable/track"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_30" />
            </RelativeLayout>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_15"
                    android:hint="驾驶人姓名"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/shape_gray_driver"
                    android:textColor="@color/text_999"
                    android:textSize="@dimen/sp_14" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:hint="驾驶人手机号"
                android:background="@drawable/shape_gray_driver"
                android:textColor="@color/text_999"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/dp_4"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_15"
        android:padding="@dimen/dp_15"
        app:cardElevation="@dimen/dp_0.7"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_15"
                    android:text="驾驶人身份证照片"
                    android:textColor="@color/text_333"
                    android:textSize="@dimen/sp_14" />
       <LinearLayout
           android:weightSum="2"
           android:layout_marginRight="@dimen/dp_15"
           android:layout_marginLeft="@dimen/dp_15"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/cardTop"
               android:src="@mipmap/card_top"
               android:layout_weight="1"
               android:scaleType="fitXY"
               android:layout_marginRight="@dimen/dp_20"
               android:layout_width="@dimen/dp_0"
               android:layout_height="80dp" />
           <ImageView
               android:id="@+id/cardBack"
               android:src="@mipmap/card_back"
               android:layout_weight="1"
               android:scaleType="fitXY"
               android:layout_width="@dimen/dp_0"
               android:layout_height="80dp" />

       </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:hint="请输入身份证号"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/shape_gray_driver"
                android:textColor="@color/text_999"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="驾驶人驾驶证照片"
                android:textColor="@color/text_333"
                android:textSize="@dimen/sp_14" />
            <LinearLayout
                android:weightSum="2"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/driverTop"
                    android:src="@mipmap/driver_top"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="80dp" />
                <ImageView
                    android:id="@+id/driverBack"
                    android:src="@mipmap/driver_back"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="80dp" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>