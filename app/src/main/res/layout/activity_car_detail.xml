<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_bg"
    android:orientation="vertical"
    tools:context=".ui.other.CarDetailActivity">
    <include layout="@layout/tool_bar"/>
    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_4"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/dp_0.7"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv"
                android:layout_marginRight="@dimen/dp_5"
                android:src="@mipmap/jing_xuan"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/license"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv"
                android:gravity="center"
                android:text="宝马"
                android:textColor="@color/text_333"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="宝马"
                android:textColor="@color/text_333"
                android:textSize="@dimen/sp_15" />
        </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/continueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="宝马"
                    android:textColor="@color/text_333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/carState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="宝马"
                    android:textColor="@color/text_333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/miles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="宝马"
                    android:textColor="@color/text_333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_4"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/dp_0.7"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="宝马"
                    android:textColor="@color/text_333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/operator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/more1"
                    android:text="宝马"
                    android:textColor="@color/text_333"
                    android:textSize="@dimen/sp_14" />
                <ImageView
                    android:id="@+id/more1"
                    android:src="@mipmap/user_more"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/workType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="宝马"
                    android:textColor="@color/text_333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/workStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/more2"
                    android:text="宝马"
                    android:textColor="@color/text_333"
                    android:textSize="@dimen/sp_14" />
                <ImageView
                    android:id="@+id/more2"
                    android:src="@mipmap/user_more"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_4"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/dp_0.7"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="宝马"
                    android:textColor="@color/text_333"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>
            <com.baidu.mapapi.map.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="175dp">

            </com.baidu.mapapi.map.MapView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_4"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/dp_0.7"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="5"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_15">
            <TextView
                android:id="@+id/findCar"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/find_car"
                android:gravity="center"
                android:text="找车"
                android:textColor="@color/text_333"
                android:drawablePadding="@dimen/dp_10"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/openDoor"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/open_door"
                android:gravity="center"
                android:text="开车门"
                android:drawablePadding="@dimen/dp_10"
                android:textColor="@color/text_333"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/closeDoor"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/close_door"
                android:gravity="center"
                android:text="关车门"
                android:drawablePadding="@dimen/dp_10"
                android:textColor="@color/text_333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/cutDian"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/cut_dian"
                android:gravity="center"
                android:text="切断电路"
                android:drawablePadding="@dimen/dp_10"
                android:textColor="@color/text_333"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/resumeDian"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/resume_dian"
                android:gravity="center"
                android:text="恢复电路"
                android:drawablePadding="@dimen/dp_10"
                android:textColor="@color/text_333"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
</LinearLayout>