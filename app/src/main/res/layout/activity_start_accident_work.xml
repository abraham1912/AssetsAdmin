<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context=".ui.accidentwork.StartAccidentWorkActivity">
    <include
        android:id="@+id/titleBar"
        layout="@layout/tool_bar"/>
    <ScrollView
        android:layout_below="@+id/titleBar"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                app:cardCornerRadius="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/dp_15"
                android:padding="@dimen/dp_15"
                app:cardElevation="@dimen/dp_0.7"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/selectCar"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="选择车辆"
                        android:textColor="@color/text_333"
                        android:textSize="@dimen/sp_14" />
                    <TextView
                        android:id="@+id/license"
                        android:layout_toLeftOf="@+id/moreImage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginRight="7dp"
                        android:text="京123"
                        android:textColor="@color/text_333"
                        android:textSize="@dimen/sp_14" />
                    <ImageView
                        android:id="@+id/moreImage"
                        android:src="@mipmap/user_more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                   <View
                       android:layout_marginLeft="@dimen/dp_15"
                       android:layout_marginRight="@dimen/dp_15"
                       android:layout_alignParentBottom="true"
                       style="@style/horizontal_line"/>
                </RelativeLayout>

                    <RelativeLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:text="用户信息"
                            android:textColor="@color/text_333"
                            android:textSize="@dimen/sp_14" />
                        <TextView
                            android:id="@+id/userInfo"
                            android:layout_toLeftOf="@+id/moreImage1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginRight="7dp"
                            android:text="京123"
                            android:textColor="@color/text_333"
                            android:textSize="@dimen/sp_14" />
                        <ImageView
                            android:id="@+id/moreImage1"
                            android:src="@mipmap/user_more"
                            android:visibility="invisible"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <View  android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_alignParentBottom="true"
                            style="@style/horizontal_line"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/driverRel"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:text="驾驶人信息"
                            android:textColor="@color/text_333"
                            android:textSize="@dimen/sp_14" />
                        <TextView
                            android:id="@+id/driver"
                            android:layout_toLeftOf="@+id/moreImage2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginRight="7dp"
                            android:text="京123"
                            android:textColor="@color/text_333"
                            android:textSize="@dimen/sp_14" />
                        <ImageView
                            android:id="@+id/moreImage2"
                            android:src="@mipmap/user_more"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <View  android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_alignParentBottom="true"
                            style="@style/horizontal_line"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/accidentInfoRel"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:text="事故方车辆信息"
                            android:textColor="@color/text_333"
                            android:textSize="@dimen/sp_14" />
                        <TextView
                            android:id="@+id/info"
                            android:layout_toLeftOf="@+id/moreImage3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_marginRight="7dp"
                            android:text="京123"
                            android:textColor="@color/text_333"
                            android:textSize="@dimen/sp_14" />
                        <ImageView
                            android:id="@+id/moreImage3"
                            android:src="@mipmap/user_more"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <View  android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_alignParentBottom="true"
                            style="@style/horizontal_line"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/repairInfoRel"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:text="维修厂信息"
                            android:textColor="@color/text_333"
                            android:textSize="@dimen/sp_14" />

                        <ImageView
                            android:src="@mipmap/user_more"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                app:cardCornerRadius="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/dp_15"
                android:padding="@dimen/dp_15"
                app:cardElevation="@dimen/dp_0.7"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:text="事故信息"
                            android:textColor="@color/text_333"
                            android:textSize="@dimen/sp_14" />

                        <View  android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_alignParentBottom="true"
                            style="@style/horizontal_line"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="责任类型"
                        android:textColor="@color/text_666"
                        android:textSize="@dimen/sp_12" />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="事故类型"
                        android:textColor="@color/text_666"
                        android:textSize="@dimen/sp_12" />

                    <RadioGroup
                        android:weightSum="3"
                        android:layout_marginRight="@dimen/dp_15"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="25dp"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:background="@drawable/selector_shape_white_yellow"
                            android:button="@null"
                            android:gravity="center"
                            android:textSize="@dimen/sp_13"
                            android:text="单方"
                            android:textColor="@drawable/selector_text_white_333" />

                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="25dp"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:layout_marginRight="@dimen/dp_30"
                            android:textSize="@dimen/sp_13"
                            android:background="@drawable/selector_shape_white_yellow"
                            android:button="@null"
                            android:gravity="center"
                            android:text="双方"
                            android:textColor="@drawable/selector_text_white_333" />

                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="25dp"
                            android:textSize="@dimen/sp_13"
                            android:background="@drawable/selector_shape_white_yellow"
                            android:button="@null"
                            android:gravity="center"
                            android:text="多方"
                            android:textColor="@drawable/selector_text_white_333" />


                    </RadioGroup>
                    <RelativeLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:text="是否使用保险"
                            android:textColor="@color/text_333"
                            android:textSize="@dimen/sp_14" />
                      <Switch
                          android:layout_centerVertical="true"
                          android:layout_alignParentRight="true"
                          android:thumb="@drawable/thumb"
                          android:track="@drawable/track"
                          android:layout_marginRight="@dimen/dp_15"
                          android:layout_width="wrap_content"
                          android:layout_height="@dimen/dp_30" />

                        <View  android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_alignParentBottom="true"
                            style="@style/horizontal_line"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:text="保险理赔金额"
                            android:textColor="@color/text_333"
                            android:textSize="@dimen/sp_14" />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:text="京123"
                            android:layout_marginRight="@dimen/dp_15"
                            android:textColor="@color/main_color"
                            android:textSize="@dimen/sp_14" />

                        <View  android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_alignParentBottom="true"
                            style="@style/horizontal_line"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:text="用户支付金额"
                            android:textColor="@color/text_333"
                            android:textSize="@dimen/sp_14" />
                        <EditText
                            android:hint="请输入金额"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:maxLength="10"
                            android:background="@null"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/main_color"
                            android:textSize="@dimen/sp_14" />

                        <View  android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_alignParentBottom="true"
                            style="@style/horizontal_line"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_44">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:text="对方赔偿金额"
                            android:textColor="@color/text_333"
                            android:textSize="@dimen/sp_14" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_alignParentRight="true"
                            android:text="京123"
                            android:layout_marginRight="@dimen/dp_15"
                            android:textColor="@color/main_color"
                            android:textSize="@dimen/sp_14" />
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardCornerRadius="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_15"
            android:padding="@dimen/dp_15"
            app:cardElevation="@dimen/dp_0.7"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="事故现场照片"
                android:layout_marginTop="@dimen/dp_15"
                android:textColor="@color/text_333"
                android:textSize="@dimen/sp_14" />
            <FrameLayout
                android:id="@+id/sceneContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:text="责任认定书照片"
                android:textColor="@color/text_333"
                android:textSize="@dimen/sp_14" />
            <FrameLayout
                android:id="@+id/dutyContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </FrameLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/submit"
       android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="提交工单"
        android:layout_marginBottom="@dimen/dp_15"
       style="@style/submit" />
</RelativeLayout>