<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    android:gravity="center_horizontal"
    tools:context=".ui.user.LoginActivity">
   <RelativeLayout
       android:background="@mipmap/login_bg"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:layout_centerInParent="true"
           android:src="@mipmap/login_logo"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
       <ImageView
           android:id="@+id/back"
           android:layout_alignParentRight="true"
           android:src="@mipmap/login_back"
           android:layout_marginRight="@dimen/dp_15"
           android:layout_marginTop="@dimen/dp_30"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </RelativeLayout>

    <EditText
        android:id="@+id/phone"
        android:layout_width="295dp"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/shape_login_bg"
        android:hint="请输入手机号"
        android:maxLength="11"
        android:drawableLeft="@mipmap/phone"
        android:drawablePadding="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_20"
        android:textColor="@color/text_333"
        android:inputType="phone"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="78dp"
        android:text="18600867433" />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="295dp"
        android:layout_height="@dimen/dp_44">
    <EditText
        android:id="@+id/password"
        android:layout_width="295dp"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/shape_login_bg"
        android:hint="请输入密码"
        android:maxLength="20"
        android:drawableLeft="@mipmap/key"
        android:drawablePadding="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_20"
        android:textColor="@color/text_333"
        android:inputType="textPassword"
        android:textSize="@dimen/sp_14"
        android:text="123456" />
        <CheckBox
            android:id="@+id/eyeCheck"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@drawable/selector_eye"
            android:checked="false"
            android:layout_width="@dimen/dp_30"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <Button
        android:id="@+id/login"
        style="@style/submit"
        android:layout_marginTop="58dp"
        android:text="登录" />

    <TextView
        android:id="@+id/forgetPsd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/text_999"
        android:textSize="@dimen/sp_12"
        android:layout_marginRight="@dimen/dp_30"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:text="忘记密码" />

</LinearLayout>