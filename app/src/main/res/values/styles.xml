<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--设置activity没有标题栏-->
    <style name="AppTheme.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--设置activity全屏-->
    <style name="AppTheme.NoActionbar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/design_tab_max_width</item>
        <item name="tabIndicatorColor">@color/main_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">15dp</item>
        <item name="tabPaddingEnd">15dp</item>
        <item name="tabBackground">@color/white</item>
        <item name="tabTextAppearance">@style/MyTabLayoutTextAppearance</item>
        <item name="tabSelectedTextColor">@color/main_color</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/text_333</item>
    </style>
    <!--竖线-->
    <style name="vertical_line">
        <item name="android:background">@color/line_bg</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!--横线-->
    <style name="horizontal_line">
        <item name="android:background">@color/line_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>
    <!--横线-->
    <style name="submit">
        <item name="android:layout_width">295dp</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_submit_bg</item>
    </style>
    <!--横线-->
    <style name="delete">
        <item name="android:layout_width">295dp</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_delete_bg</item>
    </style>
    <style name="sendcode">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="Dialog_Transparent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>


</resources>
